<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idEdtCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="نام دوره را وارد کنید"
        android:textColorHint="@color/design_default_color_secondary_variant" />

    <EditText
        android:id="@+id/idEdtCourseDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="مدت دوره را وارد کنید"
        android:textColorHint="@color/material_dynamic_primary30" />

    <EditText
        android:id="@+id/idEdtCourseTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="مسیرهای دوره را وارد کنید"
        android:textColorHint="@color/material_dynamic_primary30" />

    <EditText
        android:id="@+id/idEdtCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="توضیحات دوره را وارد کنید"
        android:textColorHint="@color/design_default_color_primary_variant" />

    <Button
        android:id="@+id/idBtnAddCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:bufferType="spannable"
        android:text="اضافه کردن دوره"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/design_default_color_on_secondary"
        android:textColorLink="@color/design_default_color_primary_variant" />

</LinearLayout>